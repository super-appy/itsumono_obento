<section class="text-secondary body-font relative">
  <div class="container px-5 py-24 mx-auto">
    <%# レシピ投稿と説明 %>
    <div class="flex flex-wrap w-full mb-20 md:ml-10">
      <div class="lg:w-1/2 w-full mb-6 lg:mb-0">
        <h1 class="sm:text-3xl text-2xl font-medium title-font mb-2 text-theme">
          <i class="fa-solid fa-pen-to-square mx-4"></i>レシピを投稿
        </h1>
        <div class="h-1 w-20 bg-point rounded"></div>
      </div>
      <p class="lg:w-1/2 w-full leading-relaxed text-secondary">
        以下の項目を入力して、レシピを登録してください。<br>
        材料は10こ、手順は5つまで登録できます。<br>
        レシピ検索を便利にするために、タグの登録をよろしくお願いします。
      </p>
    </div>
    <%# 入力フォーム %>
    <%= form_with model: @recipe do |form| %>
      <div class="lg:w-1/2 md:w-2/3 mx-auto">
          <%= render 'shared/error_messages', object: form.object %>

          <%# タイトル %>
          <div class="p-2 w-full">
            <div class="relative">
              <%= form.label :title, class: "text-sm ml-2"%>
              <%= form.text_field :title, class: "w-full bg-card-body rounded-lg border border-card-line py-1 px-3"%>
            </div>
          </div>

          <%# ここから材料 %>
          <div class="mt-5">
            <div class="flex flex-wrap">
              <p class="p-2 w-full md:w-6/12 flex justify-center items-center ">材料</p>
              <p class="p-2 w-full md:w-5/12 flex justify-center items-center">分量</p>
            </div>
              <%= form.fields_for :recipe_ingredients do |ing| %>
                <%= render 'recipe_ingredient_fields', f: ing %>
              <% end %>
            <div class="mt-2 flex justify-center">
              <%= link_to_add_association form, :recipe_ingredients, class: "text-card-body bg-secondary py-2 px-5 hover:shadow-lg rounded-full" do %>
                <i class="fa-solid fa-plus"> 材料を追加</i>
              <% end %>
            </div>
          </div>

          <%# 手順 %>
            <div class="mt-5">
              <div class="flex flex-wrap">
                <div class="p-2 w-full md:w-1/12 flex justify-center items-center ">手順</div>
                <div class="p-2 w-full md:w-10/12 flex justify-center items-center">内容</div>
              </div>
                <%= form.fields_for :recipe_steps do |step| %>
                  <%= render 'recipe_step_fields', f: step %>
                <% end %>
              <div class="mt-2 flex justify-center">
                <%= link_to_add_association form, :recipe_steps, class: "text-card-body bg-secondary py-2 px-5 hover:shadow-lg rounded-full" do %>
                  <i class="fa-solid fa-plus mr-2"></i>手順を追加
                <% end %>
              </div>
            </div>
          </div>

          <%# プルダウンを並べる %>
          <div class="flex justify-center mt-10">
            <%# 調理時間 %>
            <div class="p-2 w-full md:w-1/4">
              <div class="relative">
                <%= form.label :time_required, class: "text-sm ml-2" %>
                <%= form.select :time_required,
                                Recipe.time_requireds.keys.map { |k| [I18n.t("enums.recipe.time_required.#{k}"), k] },
                                { include_blank: "未選択" },
                                class: "w-full bg-card-body rounded-lg border border-secondary py-2 px-3" %>
              </div>
            </div>
            <%# テイスト %>
            <div class="p-2 w-full md:w-1/4">
              <div class="relative">
                <%= form.label :taste, class: "text-sm ml-2" %>
                <%= form.select :taste,
                                Recipe.tastes.keys.map {|k| [I18n.t("enums.recipe.taste.#{k}"), k]},
                                { include_blank: "未選択" },
                                class: "w-full bg-card-body rounded-lg border border-secondary py-2 px-3" %>
              </div>
            </div>
          </div>

          <%# タグ %>
          <div class="mt-5 text-center">食 材</div>
          <div class="flex justify-center">
            <% @tags.each do |category, tags| %>
              <div class="w-full md:w-1/6 px-2">
                    <%= form.label :category, I18n.t("enums.tag.category.#{category}"), class: "text-sm ml-2" %>
                    <%= form.select :tag_ids, tags, {include_blank: "選択しない"},
                          { multiple: true, class: "w-full bg-card-body rounded-lg border border-secondary py-2 px-3"} %>
              </div>
            <% end %>
          </div>

          <div class="mt-10 mx-3 flex justify-center">
            <%= form.button tyoe: 'submit', class: "text-theme bg-point border-0 py-2 px-8 hover:shadow-lg rounded-full text-lg mx-2" do %>
              <i class="fa-solid fa-pen-to-square mr-2"></i>投稿する
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</section>
