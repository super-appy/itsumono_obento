<section class="text-gray-600 body-font">
  <div class="container px-5 py-24 mx-auto">
    <h1 class="sm:text-3xl text-2xl font-medium title-font mb-4 text-gray-900 text-center"><%= @recipe.title%></h1>
    <div class="md:flex md:justify-center mt-10">
      <div class="md:w-1/3 mb-20 md:mb-0 px-10">
        <%# カード %>
        <div class="flex flex-wrap text-center md:text-left justify-center">
          <%# テイスト %>
          <div class="px-1 sm:w-1/2 w-full">
            <div class="border-2 border-gray-200 px-2 py-3 rounded-lg flex justify-center items-center">
              <div class="px-2 flex items-center">
                <p class="leading-relaxed">テイスト</p>
                <i class="fa-solid fa-bowl-rice mx-3"></i>
                <h2 class="title-font text-gray-900 font-semibold"><%= @recipe.taste%></h2>
              </div>
            </div>
          </div>
          <%# 調理時間 %>
          <div class="px-1 sm:w-1/2 w-full">
            <div class="border-2 border-gray-200 px-2 py-3 rounded-lg flex justify-center items-center">
              <div class="px-2 flex items-center">
                <p class="leading-relaxed">調理時間</p>
                <i class="fa-solid fa-clock-rotate-left mx-3"></i>
                <h2 class="title-font text-gray-900 font-semibold"><%= @recipe.time_required%></h2>
              </div>
            </div>
          </div>
        </div>
        <%# 食材と分量 %>
        <div class="mt-5 border-b border-gray-200">
          <div class="flex py-2">
            <span class="text-gray-500">食材の名前</span>
            <span class="ml-auto text-gray-500">分量</span>
          </div>
          <%# 材料のパーシャルファイル %>
          <% @recipe.recipe_ingredients.each do |ingredient| %>
            <%= render 'ingredient', ingredient: ingredient %>
          <% end %>
        </div>
      </div>
      <%# 料理手順 %>
      <div class="md:w-1/3 px-10 ">
        <%# STEP1 %>
          <% @recipe.recipe_steps.each_with_index do |step, index| %>
            <% if index != @recipe.recipe_steps.length-1 %>
              <%= render 'step', step: step %>
            <% else%>
              <%= render 'step_last', step: step%>
            <% end %>
          <% end %>

      </div>
    </div>
  </div>
</section>