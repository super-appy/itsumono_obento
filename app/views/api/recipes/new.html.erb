<section class="text-theme relative">
  <div class="container px-5 py-24 mx-auto">

    <%# レシピ投稿と説明 %>
    <div class="flex flex-wrap w-full md:mb-20 mb-10">
      <div class="lg:w-1/2 w-full mb-6 lg:mb-0">
        <h1 class="sm:text-3xl text-2xl font-medium title-font mb-2">
          <i class="fa-solid fa-robot mx-4"></i>AIでレシピを生成
        </h1>
        <div class="h-1 w-20 bg-point rounded"></div>
      </div>
      <p class="lg:w-1/2 w-full leading-relaxed text-secondary">
        ①調理時間を選択する<br>
        ②味のテイストを「和風・洋風・中華風」から選択する<br>
        ③使いたい食材を以下の中から各カテゴリで１つ（最低１つ、最大で３つ）を選択する
      </p>
    </div>

    <div class="md:w-2/3 mx-auto">
      <%# エラーメッセージ %>
      <% if @error_message.present? %>
        <div class="flash_message container mx-auto w-full">
          <div class="bg-red-100 border-red-400 text-red-700 py-2 my-2 rounded relative px-2" role="alert">
            <span class="block sm:inline">
              <%= @error_message %>
            </span>
          </div>
        </div>
      <% end %>

      <%# 入力フォーム %>
      <%= form_for @recipe, url: api_recipes_path do |form| %>
          <%= render 'shared/error_messages', object: form.object %>

          <%# プルダウンを並べる %>
          <div class="flex flex-wrap">

            <%# 調理時間 %>
            <div class="p-2 w-full md:w-1/2">
              <div class="relative">
              <div class="mb-2 ml-2">① 調理時間</div>
                <%= form.select :time_required,
                                Recipe.time_requireds.keys.map { |k| [I18n.t("enums.recipe.time_required.#{k}"), k] },
                                { include_blank: "未選択" },
                                class: "w-full bg-card-body rounded-lg border border-line-200 border-secondary py-2 px-3" %>
              </div>
            </div>

            <%# テイスト %>
            <div class="p-2 w-full md:w-1/2">
            <div class="relative">
              <div class="mb-2 ml-2">② 味のテイスト</div>
                <%= form.select :taste,
                                Recipe.tastes.keys.map {|k| [I18n.t("enums.recipe.taste.#{k}"), k]},
                                { include_blank: "未選択" },
                                class: "w-full bg-card-body rounded-lg border border-line-200 border-secondary py-2 px-3" %>
              </div>
            </div>
          </div>

          <%# タグ %>
          <div class="mt-10 ml-2">③ 使いたい食材</div>
            <div class="flex flex-wrap">
              <% @tags.each do |category, tags| %>
                <div class="p-2 w-full md:w-1/3 px-2">
                  <div class="relative">
                      <%= form.label :category, I18n.t("enums.tag.category.#{category}"), class: "text-sm text-secondary" %>
                      <%= form.select :tag_ids, tags, {include_blank: "選択しない"},
                        { multiple: true, class: "w-full bg-card-body rounded-lg border border-line-200 border-secondary py-2 px-3 "} %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>

          <%# ボタン %>
          <div class="mt-10 mx-3 flex justify-center">
            <%= form.button type: 'submit', class: "text-secondary border border-secondary bg-point py-2 px-5 hover:shadow-lg rounded-full text-lg font-semibold mx-2 w-full md:w-1/4" do %>
              <i class="fa-solid fa-lightbulb mx-2"></i>レシピを生成
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
