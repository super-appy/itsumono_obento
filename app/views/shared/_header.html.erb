<!-- ヘッダー -->
<header class="container mx-auto flex justify-between items-center px-5 w-full mt-5 z-30">
  <div class="text-3xl text-gray-800 font-bold">いつものお弁当</div>
    <div class="space-x-12 items-center hidden md:flex">
      <%# レシピのプルダウン %>
      <div class="group relative cursor-pointer">
        <div class="flex items-center justify-center">
          <a class="menu-hover py-2 text-gray-800 lg:mx-4">レシピ</a>
        </div>
        <div class="invisible absolute bg-white border border-gray-300 left-1/2 z-50 flex w-auto min-w-max flex-col py-1 transform -translate-x-1/2 group-hover:visible">
          <div class="flex items-center my-1 px-4 border-b border-gray-100 py-1 text-gray-700 hover:text-selected-text">
            <i class="fa-solid fa-utensils fa-fw"></i>
            <%= link_to 'レシピ生成', new_api_recipes_path %>
          </div>
          <div class="flex items-center my-1 px-4 border-b border-gray-100 py-1 text-gray-700 hover:text-selected-text">
            <i class="fa-solid fa-list fa-fw"></i>
            <%= link_to 'レシピ一覧', recipes_path %>
          </div>
          <div class="flex items-center my-1 px-4 border-b border-gray-100 py-1 text-gray-700 hover:text-selected-text">
            <i class="fa-solid fa-pen-to-square fa-fw"></i>
            <%= link_to 'レシピ投稿', new_recipe_path %>
          </div>
        </div>
      </div>
      <%= link_to 'みんなのお弁当', lunchbox_logs_path, class:"hover:text-selected-text transition-all text-gray-800 duration-300" %>
      <%= link_to 'お弁当ログ', new_lunchbox_log_path, class:"hover:text-selected-text transition-all text-gray-800 duration-300" %>
      <%# マイページのプルダウン %>
      <div class="group relative cursor-pointer">
        <div class="flex items-center justify-between">
          <a class="menu-hover lg:mx-4">
            <%= image_tag "icon_default.png", class: "rounded-full h-8 w-8 flex items-center justify-center ring-1 ring-gray-400" %>
          </a>
        </div>
        <div class="invisible absolute left-1/2 z-50 flex w-auto min-w-max flex-col py-1 transform -translate-x-1/2 group-hover:visible">
          <a href="#" class="my-1 block px-4 border-b text-center border-gray-100 py-1 text-gray-700 hover:text-selected-text">マイページ</a>
          <a href="#" class="my-1 block px-4 border-b text-center border-gray-100 py-1 text-gray-700 hover:text-selected-text">プロフィール</a>
          <%= link_to 'ログアウト', logout_path, data: { turbo_method: :delete }, class: "text-white bg-indigo-500 border-0 py-2 px-8 focus:outline-none hover:bg-indigo-600 rounded-full" %>
        </div>
      </div>
    </div>
    <%# スマホで見た時のハンバーガーメニュー %>
    <div class="md:hidden group relative z-40">
      <i class="fa-solid fa-bars menu-button fa-2x hover:cursor-pointer"></i>
      <div class="menu hidden group-hover:block absolute right-0 top-full mt-3 bg-white shadow-lg z-50 min-w-[200px]">
        <ul class="flex flex-col z-10 items-center">
          <div class="flex items-center my-1 px-4 border-b border-gray-100 py-1 text-gray-700 hover:text-selected-text">
            <i class="fa-solid fa-utensils fa-fw"></i>
            <%= link_to 'レシピ生成', new_api_recipes_path %>
          </div>
          <div class="flex items-center my-1 px-4 border-b border-gray-100 py-1 text-gray-700 hover:text-selected-text">
            <i class="fa-solid fa-list fa-fw"></i>
            <%= link_to 'レシピ一覧', recipes_path %>
          </div>
          <div class="flex items-center my-1 px-4 border-b border-gray-100 py-1 text-gray-700 hover:text-selected-text">
            <i class="fa-solid fa-pen-to-square fa-fw"></i>
            <%= link_to 'レシピ投稿', new_recipe_path %>
          </div>
          <%= link_to 'みんなのお弁当', lunchbox_logs_path, class:"flex items-center my-1 px-4 border-b border-gray-100 py-1 text-gray-700 hover:text-selected-text" %>
          <%= link_to 'お弁当ログ', new_lunchbox_log_path, class:"flex items-center my-1 px-4 border-b border-gray-100 py-1 text-gray-700 hover:text-selected-text" %>
          <%= link_to 'マイページ', mypage_path, class:"flex items-center my-1 px-4 border-b border-gray-100 py-1 text-gray-700 hover:text-selected-text" %>
          <%= link_to 'ログアウト', logout_path, data: { turbo_method: :delete }, class: "flex items-center my-1 px-4 border-b border-gray-100 py-1 text-gray-700 hover:text-selected-text" %>
        </ul>
      </div>
    </div>

</header>

