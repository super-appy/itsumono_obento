<!-- ヘッダー -->
<header class="container mx-auto flex justify-between items-center px-5 w-full pt-5 z-30">
  <%= link_to 'いつものお弁当', root_path, class: "text-3xl text-gray-800 font-bold"%>
  <div class="space-x-12 items-center hidden md:flex">
    <%# レシピのプルダウン %>
    <div class="group relative cursor-pointer">
      <div class="flex items-center justify-center">
        <a class="menu-hover py-2 text-gray-800 mr-3">レシピ </a>
        <i class="fa-solid fa-caret-down"></i>
      </div>
      <div class="invisible absolute bg-white border border-gray-300 left-1/2 z-50 flex w-auto min-w-max flex-col py-1 transform -translate-x-1/2 group-hover:visible">
        <div class="flex items-center my-1 px-4 py-1 text-gray-700 hover:text-selected-text">
          <i class="fa-solid fa-utensils mr-1"></i>
          <%= link_to 'レシピ生成', new_api_recipe_path %>
        </div>
        <div class="flex items-center my-1 px-4 py-1 text-gray-900 hover:text-selected-text">
          <i class="fa-solid fa-list mr-1"></i>
          <%= link_to 'レシピ一覧', recipes_path %>
        </div>
      </div>
    </div>
    <%= link_to 'みんなのお弁当', lunchbox_logs_path, class:"flex items-center text-gray-900 hover:text-selected-text" %>
    <%= link_to 'ログイン', login_path, class: "text-white bg-indigo-500 border-0 py-2 px-8 focus:outline-none hover:bg-indigo-600 rounded-full"%>
    <%= link_to 'ユーザー登録', new_user_path, class: "text-white bg-indigo-500 border-0 py-2 px-8 focus:outline-none hover:bg-indigo-600 rounded-full"%>
  </div>
  <%# スマホで見た時のハンバーガーメニュー %>
  <div class="md:hidden group relative z-40">
    <i class="fa-solid fa-bars menu-button fa-2x hover:cursor-pointer"></i>
    <div class="menu hidden group-hover:block absolute right-0 top-full mt-3 bg-white shadow-lg z-50 min-w-[200px]">
      <ul class="flex flex-col z-10 items-center">
        <div class="flex items-center my-1 px-4 py-1 text-gray-700 hover:text-selected-text">
          <i class="fa-solid fa-utensils fa-fw"></i>
          <%= link_to 'レシピ生成', new_api_recipe_path %>
        </div>
        <div class="flex items-center my-1 px-4 py-1 text-gray-700 hover:text-selected-text">
          <i class="fa-solid fa-list fa-fw"></i>
          <%= link_to 'レシピ一覧', recipes_path %>
        </div>
        <div class="flex items-center my-1 px-4 py-1 text-gray-700 hover:text-selected-text">
          <i class="fa-regular fa-images mr-1"></i>
          <%= link_to 'みんなのお弁当', lunchbox_logs_path %>
        </div>
        <div class="flex items-center my-1 px-4 py-1 text-gray-700 hover:text-selected-text">
          <i class="fa-solid fa-user-plus mr-1"></i>
          <%= link_to 'ユーザー登録', new_user_path %>
        </div>
        <div class="flex items-center my-1 px-4 py-1 text-gray-700 hover:text-selected-text">
          <i class="fa-solid fa-right-from-bracket mr-1"></i>
          <%= link_to 'ログイン', login_path %>
        </div>
      </ul>
    </div>
  </div>
</header>
